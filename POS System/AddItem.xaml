        </Canvas>
        <Rectangle Fill="#FF7E99F5" Height="95" Canvas.Left="10" Stroke="Black" Canvas.Top="10" Width="774"/>
        <Image Height="124" Canvas.Left="675" Canvas.Top="24" Width="109" RenderTransformOrigin="0.72,0.149" Source="img/main.png"/>
        <Label Content="POS System" Height="61" Canvas.Left="44" Canvas.Top="26" Width="220" FontSize="36" Foreground="#DDFBFBFB" FontWeight="Bold"/>
        <Label Content="Add Item" Height="54" Canvas.Left="92" Canvas.Top="116" Width="172" FontSize="24" FontWeight="Bold"/>

    </Canvas>
