            <Label Content="Price" Height="34" Canvas.Left="380" Canvas.Top="96" Width="92" FontSize="20"/>
            <TextBox Height="34" Canvas.Left="477" TextWrapping="Wrap" Canvas.Top="96" Width="193" FontSize="20"/>
